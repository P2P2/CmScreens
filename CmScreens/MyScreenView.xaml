<Window x:Class="CmScreens.MyScreenView"
        Width="500" Height="350"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:cal="http://www.caliburnproject.org"
        xmlns:local="clr-namespace:CmScreens"
        mc:Ignorable="d"
        cal:Message.Attach="[Event Closing] = [Action OnClose($eventArgs)]">
    <Grid>
            <TextBlock x:Name="Ticker" FontSize="100" VerticalAlignment="Center" HorizontalAlignment="Center" />
    </Grid>
</Window>
    
